{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spotify-clone/libs/alkalis": ["libs/alkalis/src/index.ts"],
      "@spotify-clone/libs/atoms": ["libs/atoms/src/index.ts"],
      "@spotify-clone/libs/catalysts": ["libs/catalysts/src/index.ts"],
      "@spotify-clone/libs/compositions": ["libs/compositions/src/index.ts"],
      "@spotify-clone/libs/compounds": ["libs/compounds/src/index.ts"],
      "@spotify-clone/libs/crystals": ["libs/crystals/src/index.ts"],
      "@spotify-clone/libs/flasks": ["libs/flasks/src/index.ts"],
      "@spotify-clone/libs/inerts": ["libs/inerts/src/index.ts"],
      "@spotify-clone/libs/molecules": ["libs/molecules/index.ts"],
      "@spotify-clone/libs/quarks": ["libs/quarks/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
