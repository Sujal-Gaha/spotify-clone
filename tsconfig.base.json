{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spotify-clone/libs/atoms": ["libs/atoms/src/index.ts"],
      "@spotify-clone/libs/compounds": ["libs/compounds/src/index.ts"],
      "@spotify-clone/libs/crystals": ["libs/crystals/src/index.ts"],
      "@spotify-clone/libs/molecules": ["libs/molecules/src/index.ts"],
      "@spotify-clone/libs/quarks/*": ["libs/quarks/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
